{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "webpack-dev-server",
            "type": "shell",
            "command": "${workspaceRoot}/node_modules/.bin/webpack",
            "args": [
                "--config",
                "webpack.config.dev.js"
            ],
            "isBackground": true,
            "problemMatcher": {
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "webpack is watching the files",
                    "endsPattern": "^C",

                }    
            }
        }
    ]
}